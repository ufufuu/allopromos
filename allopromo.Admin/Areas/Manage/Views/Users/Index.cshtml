@model IEnumerable<allopromo.Admin.Models.Dto.UserDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Index</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Rechercher", "Search")
            </th>
            <th>
                <button class="btn btn-primary btn-large" data-target="#searchModalForm"
                        data-toogle="modal">
                    Rechercher User
                </button>
            </th>
        </tr>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserPwd)
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserPwd)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
    
</table>
<div class="modal fade" id="searchModalForm">
    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="0" role="dialog"
         aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close"
                            data-dismiss="modal" aria-hidden="true">
                        &times;
                    </button>
                    <h4 class="modal-title" id="myModalLabel">
                        This Modal title
                    </h4>
                </div>
                <div class="modal-body">
                    <table>
                        <tr><th><h4>Search:</h4></th></tr>
                        @Html.BeginForm("Search", "SearchKeyWorkd")
                        {
                        <tr><th>@Html.Label("Search:")</th></tr>
                        <tr><th>@Html.TextArea("keyWordName")</th></tr>
                        <tr><th><input type="submit" value="Search" /></th></tr>
                        }
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default"
                            data-dismiss="modal">
                        Close
                    </button>
                    <button type="button" class="btn btn-primary">
                        Submit changes
                    </button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal -->
    </div>
</div>