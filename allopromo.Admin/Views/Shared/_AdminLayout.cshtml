                                <button data-target="#AddStoreCategory" data-toggle="modal">ADDD</button>
                            </div>
                            <div class="panel-body">
                                <a style="color:#000" asp-controller="Categories" asp-action="Index">Ajout</a>
                                    @Html.ActionLink("Ajouter", "AjouPer", new { area = "Manage" }), null);
                            </div>
                            <div class="panel-body">
                                <a style="color:#000" asp-controller="Categories" asp-action="List">
                                    @Html.ActionLink("Liste", "Listing", new { area = "Manage" }), null);
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="align-items-md-center">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a style="color:#fff" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                                    Cat&eacute;gories de Stores
                                </a>
                            </h4>
                        </div>
                        <div id="collapseOne" class="panel-collapse collapse in">
                            <div class="panel-body" style="">
                                @Html.ActionLink("Ajouter", "Create", "Categories", null,
                                    new { @style = "color:#000" })
                            </div>
                            <div class="panel-body">
                                <a style="color:#000" asp-controller="Categories" asp-action="List">List of </a>
                            </div>
                        </div>
                    </div>
                    <div class="align-items-md-center">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a style="color:#fff" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                                    Types de Stores
                                </a>
                            </h4>
                        </div>
                        <div id="collapseOne" class="panel-collapse collapse in">
                            <div class="panel-body" style="">
                                @Html.ActionLink("Ajouter Type", "Create", "Types", null,
                                    new { @style = "color:#000" })
                            </div>
                            <div class="panel-body">
                                <a style="color:#000" asp-controller="Categories" asp-action="List">List of </a>
                            </div>
                            <div id="div_storeCategoryAdd" style="display:none; align-content:center; align:center">
                                <h3>Ajouter Store Categ</h3>

                            </div>
                        </div>
                    </div>
                    <div class="align-items-md-center">
                        <a href="">Stores</a>
                    </div>
                    <div class="align-items-md-center">
                        <a asp-controller="Home" asp-action="Users">Localizations</a>
                    </div>
                </div>
                <div class="panel-group" id="accordion">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a style="color:#fff" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">
                                    Utilisateurs >
                                </a>
                            </h4>
                        </div>
                        <div id="collapseOne" class="panel-collapse collapse in">
                            <div class="panel-body">
                                @Html.ActionLink("Users", "Index", "Users", null,
                                new { @style = "color:#000" })
                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
