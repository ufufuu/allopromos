                                444444444
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-9" style="background-color:#fff">

                <main role="main" class="pb-3" style="background-color:#fff">
                    @RenderBody()
                </main>

            </div>

        </div>
        <div class="row" style="background-color:red">
            <div class="col-md-4"><h4> Footer 11</h4></div>
            <div class="col-md-4"><h4> Footer 22</h4></div>
            <div class="col-md-4"><h4> Footer 33</h4></div>
        </div>
        <div class="modal fade" id="addStoreCategory" tabindex="-1" role="dialog"
             aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close"
                                data-dismiss="modal" aria-hidden="true">
                            &times;
                        </button>
                        <h4 class="modal-title" id="myModalLabel">
                            This Modal title
                        </h4>
                    </div>
                    <div class="modal-body">
                        Add some text here
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default"
                                data-dismiss="modal">
                            Close
                        </button>
                        <button type="button" class="btn btn-primary">
                            Submit changes
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2022 - allopromo.Admin - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        <script href="/lib/jquery/dist/jquery.js" type="text/javascript">
        </script>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
